{% if git_version is defined and git_version == "redesign" %}
global:
  css:
    theme:
      //static.icos-cp.eu/constant/bootstrap/3.3.5/css/bootstrap.min.css: { type: external, minified: true }
      css/cp_theme_d8.css: {}
{% if cp_theme_d8 | default(false) %}
      css/{{ cp_theme_d8 }}.css: {}
{% endif %}
      css/menu.css: {}

  js:
    //static.icos-cp.eu/constant/bootstrap/3.3.5/js/bootstrap.min.js: { type: external, minified: true }
    js/cookie-notice.js: {}
{% if cp_theme_d8 | default(false) %}
    js/{{ cp_theme_d8 }}.js: {}
{% endif %}
{% else %}
global:
  css:
    theme:
      css/{{ cp_theme_d8 | default("cp_theme_d8") }}.css: {}
      //static.icos-cp.eu/constant/bootstrap/3.3.5/css/bootstrap.min.css: { type: external, minified: true }

  js:
    js/cookie-notice.js: {}
    js/{{ cp_theme_d8 | default("cp_theme_d8") }}.js: {}
    //static.icos-cp.eu/constant/bootstrap/3.3.5/js/bootstrap.min.js: { type: external, minified: true }
{% endif %}

